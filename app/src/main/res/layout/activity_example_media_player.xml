<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="open.com.openapps.mediaplayermp3.ExampleMediaPlayer">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PLAYER MP3"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Archive"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/Archive"
        android:weightSum="1">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/start"
        android:src="@drawable/img_start"
        android:layout_marginTop="26dp"
        android:layout_marginRight="22dp"
        android:layout_below="@+id/Archive"
        android:layout_alignEnd="@+id/pause" />

    <ImageButton
        android:layout_width="43dp"
        android:layout_height="57dp"
        android:id="@+id/pause"
        android:layout_toEndOf="@+id/start"

        android:layout_alignTop="@+id/start"
        android:src="@drawable/img_pause" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="55dp"
        android:id="@+id/stop"
        android:layout_toEndOf="@+id/pause"
        android:layout_alignTop="@+id/pause"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_stop" />

    </LinearLayout>
</RelativeLayout>
